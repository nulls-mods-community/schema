{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "https://ext.nulls.gg/mods/patches.schema.json",
    "description": "A schema for validating patch files in Null's Brawl Mods JSON files.",
    "type": "object",
    "properties": {
        "$schema": {
            "anyOf": [
                {
                    "const": "https://ext.nulls.gg/mods/patches.schema.json"
                },
                {
                    "const": "./schema/patches.schema.json"
                },
                {
                    "type": "string",
                    "format": "uri",
                    "description": "The schema version used. Should always be 'https://ext.nulls.gg/mods/patches.schema.json'."
                }
            ]
        },
        "fame_tiers": {
            "type": "object",
            "description": "An object containing fame tier modifications.",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "FameToNext": {
                        "type": ["integer", "null"],
                        "minimum": 0,
                        "description": "The amount of fame required to reach the next tier. Set to null if there is no next tier."
                    }
                },
                "required": ["FameToNext"],
                "additionalProperties": false
            }
        }
    },
    "additionalProperties": false
}