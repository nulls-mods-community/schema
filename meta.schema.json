{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "https://ext.nulls.gg/mods/schema/schema.json",
    "title": "Null's Modification file",
    "description": "A schema for validating Null's Mods JSON files.",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string",
            "format": "uri",
            "description": "The schema version used. Should always be 'https://ext.nulls.gg/mods/schema/schema.json'."
        },
        "@title": {
            "$ref": "localizedString.schema.json",
            "description": "The name of the modification."
        },
        "@description": {
            "$ref": "localizedString.schema.json",
            "description": "A long description of the modification."
        },
        "@author": {
            "$ref": "localizedString.schema.json",
            "description": "The author of the modification."
        },
        "@version": {
            "type": "string",
            "description": "The version of the modification.",
            "default": "1.0.0",
            "pattern": "^(0|[1-9]\\d{0,5})\\.(0|[1-9]\\d{0,5})\\.(0|[1-9]\\d{0,5})$"
        },
        "@features": {
            "type": "object",
            "description": "The features of the modification.",
            "propertyNames": {
                "$ref": "feature.meta.schema.json#/definitions/key"
            },
            "additionalProperties": {
                "$ref": "feature.schema.json"
            },
            "minProperties": 1
        },
        "@feature_groups": {
            "description": "The features groups of the modification.",
            "type": "object",
            "propertyNames": {
                "$ref": "feature_group.schema.json#/definitions/key"
            },
            "additionalProperties": {
                "$ref": "feature_group.schema.json"
            },
            "minProperties": 1
        },
        "@root": {
            "type": "string",
            "description": "A path to folder containing the game files for this modification. All files in this folder will be copied to the game directory."
        },
        "@patches": {
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1
                }
            ],
            "description": "The patch files associated with this modification."
        }
    },
    "required": [
        "@title",
        "@description"
    ],
    "additionalProperties": false
}